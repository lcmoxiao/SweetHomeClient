<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@mipmap/all_background">

    <FrameLayout
        android:id="@+id/home_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/home_switchgroup_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_switchgroup_bottom"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#56FFFF80"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/home_find_bt"
            android:layout_width="26dp"
            android:layout_height="23dp"

            android:layout_marginStart="76dp"
            android:layout_marginBottom="11dp"

            android:background="@drawable/ic_earth"
            android:cropToPadding="true"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/home_friend_bt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/meet"
            android:textColor="@color/white"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/home_find_bt"
            app:layout_constraintStart_toStartOf="@+id/home_find_bt"
            app:layout_constraintTop_toTopOf="@+id/home_find_bt" />


        <Button
            android:id="@+id/home_friend_bt"
            android:layout_width="26dp"
            android:layout_height="23dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/ic_friend"
            android:button="@null"
            android:cropToPadding="true"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/home_find_bt"
            app:layout_constraintRight_toLeftOf="@+id/home_mine_bt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="22dp"
            android:text="@string/friend1"
            android:textColor="@color/white"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/home_friend_bt"
            app:layout_constraintStart_toStartOf="@+id/home_friend_bt"
            app:layout_constraintTop_toTopOf="@+id/home_friend_bt" />


        <Button
            android:id="@+id/home_mine_bt"
            android:layout_width="25dp"
            android:layout_height="23dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/ic_mine"
            android:button="@null"
            android:cropToPadding="true"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/home_friend_bt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="22dp"
            android:text="@string/me"
            android:textColor="@color/white"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/home_mine_bt"
            app:layout_constraintStart_toStartOf="@+id/home_mine_bt"
            app:layout_constraintTop_toTopOf="@+id/home_mine_bt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>