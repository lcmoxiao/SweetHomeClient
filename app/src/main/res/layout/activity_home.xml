<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@mipmap/all_background">

    <fragment
        android:id="@+id/home_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/home_switchgroup_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </fragment>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_switchgroup_bottom"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="#56FFFF80"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/home_find_rbt"
            android:layout_width="75px"
            android:layout_height="61px"

            android:layout_marginLeft="200px"
            android:layout_marginBottom="20px"
            android:background="@drawable/ic_earth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/home_friend_rbt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="22dp"

            android:text="找"
            android:textColor="@color/white"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/home_find_rbt"
            app:layout_constraintStart_toStartOf="@+id/home_find_rbt"
            app:layout_constraintTop_toTopOf="@+id/home_find_rbt" />


        <Button
            android:id="@+id/home_friend_rbt"
            android:layout_width="75px"
            android:layout_height="61px"
            android:layout_marginBottom="20px"
            android:background="@drawable/ic_friend"
            android:button="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/home_find_rbt"
            app:layout_constraintRight_toLeftOf="@+id/home_mine_rbt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="22dp"
            android:text="友"
            android:textColor="@color/white"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/home_friend_rbt"
            app:layout_constraintStart_toStartOf="@+id/home_friend_rbt"
            app:layout_constraintTop_toTopOf="@+id/home_friend_rbt" />


        <Button
            android:id="@+id/home_mine_rbt"
            android:layout_width="75px"
            android:layout_height="61px"
            android:layout_marginRight="200px"
            android:layout_marginBottom="20px"
            android:background="@drawable/ic_mine"
            android:button="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/home_friend_rbt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="22dp"
            android:text="我"
            android:textColor="@color/white"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/home_mine_rbt"
            app:layout_constraintStart_toStartOf="@+id/home_mine_rbt"
            app:layout_constraintTop_toTopOf="@+id/home_mine_rbt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>